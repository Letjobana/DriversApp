<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Driver's Dashboard</h2>
    </div>
    <div class="col-6 text-right">
        <button type="button" id="btnModal" class="btn btn-info" data-toggle="modal" data-target="#driversModal">
            Add New Driver
        </button>
    </div>
    <br />
    <div class="col-12">
        <table class="table table-striped border">
            <thead>
                <tr class="text-info">
                    <th hidden>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Department</th>
                    <th>Section</th>
                    <th>Requirement</th>
                    <th>Manager</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="tbody">
            </tbody>
        </table>
    </div>
    <div class="modal fade" id="driversModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Drivers Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-4">
                            <label hidden>ID</label>
                        </div>
                        <div class="col-lg-8">
                            <div class="form-group">
                                <input id="txtId" hidden class="form-control" />
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <label>First Name</label>
                        </div>
                        <div class="col-lg-8">
                            <div class="form-group">
                                <input id="txtfirstName" class="form-control" />
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <label>Last Name</label>
                        </div>
                        <div class="col-lg-8">
                            <div class="form-group">
                                <input type="text" id="txtlastName" class="form-control" />
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <label>Email</label>
                        </div>
                        <div class="col-lg-8">
                            <div class="form-group">
                                <input type="email" id="txtEmail" class="form-control" />
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <label>Department</label>
                        </div>
                        <div class="col-lg-8">
                            <div class="form-group">
                                <select id="departmentDropdown" class="form-control"></select>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <label>Section</label>
                        </div>
                        <div class="col-lg-8">
                            <div class="form-group">
                                <select id="sectionDropdown" class="form-control"></select>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <label>Requirement</label>
                        </div>
                        <div class="col-lg-8">
                            <div class="form-group">
                                <select id="requirementDropdown" class="form-control"></select>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <label>Manager</label>
                        </div>
                        <div class="col-lg-8">
                            <div class="form-group">
                                <select id="managerDropdown" class="form-control"></select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="#" id="btnAdd" onclick="return SaveData();" class="btn btn-primary">Save</a>
                    <a href="#" id="btnUpdate" onclick="UpdateData();" class="btn btn-success">Update</a>
                    <a href="#" class="btn btn-secondary" data-dismiss="modal">Close</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/js/Driver.js"></script>
<script src="~/js/DriverAjax.js"></script>